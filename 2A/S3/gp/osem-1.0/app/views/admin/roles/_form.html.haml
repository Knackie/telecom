.row
  .col-md-12
    .page-header
      %h2
        Role
        = @role.name.titleize
      .text-muted
        = @role.description

= semantic_form_for @role, url: admin_conference_role_path(@conference.short_title, @role.name) do |f|
  .row
    .col-md-5
      = f.input :description

      = f.action :submit, as: :button, button_html: { class: 'btn btn-primary' }
